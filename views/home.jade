extends layout

block content

  h1 PennApps Demo
  p.lead
    | Not your average college hackathon.
    br
    | 48 hours. 1,200 hackers. $30,000 in prizes.

  div(class='row')
      div(class='col-sm-4 col-sm-offset-8')
        h2 Recent Updates
        each announcement in announcements
          div(class='main-announcement')
            h3 #{announcement.name}
            h4 #{announcement.description}
            h6 By #{announcement.author} | #{announcement.time}
 
  link(rel='stylesheet', href='/css/home-custom.css')