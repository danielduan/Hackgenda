extends ../layout

block content
  .page-header
    h3 Add Chatroom

  form.form-horizontal(role='form', method='POST')
    input(type='hidden', name='_csrf', value=token)
    .form-group
      label(class='col-sm-2 control-label', for='logourl') Chatroom Name
      .col-sm-8
        input.form-control(type='text', name='logourl', id='logourl')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-default(type='submit')
          i.fa.fa-mail-forward
          | Add