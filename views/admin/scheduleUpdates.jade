extends ../layout

block content
  .page-header
    h3 Update Schedule

  each day in schedule
    h4 Day: #{day.day}
    each event in day.events
      h5(class='col-sm-2 control-label') Name:
      span(class='col-sm-2') #{event.name}
      h5(class='col-sm-2 control-label') Start Time:
      span(class='col-sm-2') #{event.time}
      h5(class='col-sm-2 control-label') End Time:
      span(class='col-sm-2') #{event.endtime}
      h5(class='col-sm-2 control-label') Description:
      span(class='col-sm-10') #{event.description}
      h5(class='col-sm-2 control-label') URL:
      span(class='col-sm-10') #{event.url}


  form.form-horizontal(role='form', method='POST')
    input(type='hidden', name='_csrf', value=token)
    .form-group
      label(class='col-sm-2 control-label', for='name') Name
      .col-sm-8
        input.form-control(type='text', name='name', id='name')
    .form-group
      label(class='col-sm-2 control-label', for='description') Description
      .col-sm-8
        textarea.form-control(type='text', name='description', id='description', rows='3')
    .form-group
      label(class='col-sm-2 control-label', for='day') Day
      .col-sm-8
        input.form-control(type='text', name='day', id='day')
    .form-group
      label(class='col-sm-2 control-label', for='time') Start Time
      .col-sm-8
        input.form-control(type='text', name='time', id='time')
    .form-group
      label(class='col-sm-2 control-label', for='time') End Time
      .col-sm-8
        input.form-control(type='text', name='endtime', id='endtime')
    .form-group
      label(class='col-sm-2 control-label', for='url') URL
      .col-sm-8
        input.form-control(type='text', name='url', id='url', rows='7')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-default(type='submit')
          i.fa.fa-mail-forward
          | Add
